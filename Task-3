<script>
  (() => {
    const track   = document.querySelector('.carousel-track');
    const slides  = Array.from(track.children);
    const dots    = document.querySelectorAll('.carousel-dots .dot');
    const quizBox = document.querySelector('.quiz-overlay');
    let current   = 0, timer;

    function goTo(idx) {
      current = (idx + slides.length) % slides.length;
      track.style.transform = `translateX(-${current * 100}%)`;
      dots.forEach((d,i)=>d.classList.toggle('active', i===current));

      if (current === slides.length - 1) {
        clearInterval(timer);
        quizBox.style.display='flex';
        requestAnimationFrame(()=>quizBox.classList.add('show'));
      } else {
        quizBox.classList.remove('show');
        setTimeout(()=>quizBox.style.display='none',750);
      }
    }
    function start(){
      quizBox.classList.remove('show');
      setTimeout(()=>quizBox.style.display='none',750);
      timer = setInterval(()=>goTo(current+1),2500);
    }
    function stop(){clearInterval(timer);}

    start();
    dots.forEach(d=>d.addEventListener('click',()=>{stop();goTo(+d.dataset.index);}));
    track.addEventListener('mouseenter',stop);
    track.addEventListener('mouseleave',()=>{if(current!==slides.length-1)start();});
    document.querySelector('.quiz-form').addEventListener('submit',e=>{
      e.preventDefault();alert('Thank you!');start();
    });
  })();
  </script>

        
